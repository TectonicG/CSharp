<Window x:Class="Serial_Com.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ScottPlot="clr-namespace:ScottPlot.WPF;assembly=ScottPlot.WPF"
        xmlns:local="clr-namespace:Serial_Com"
        mc:Ignorable="d"
        Title="MainWindow" Height="712" Width="1319">

    <GroupBox>
        <GroupBox.Header>
            <Label Content="Fluidics Controls"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           FontWeight="Bold"
                            />
        </GroupBox.Header>

        <!--TABS-->
        <TabControl Name="fluidicsTabControl" TabStripPlacement="Top" Margin="10" Height="Auto">
            <TabItem Name="SerialControls" Header="Serial" FontWeight="Bold">
                <GroupBox Margin="10" VerticalAlignment="Top" HorizontalAlignment="Left">
                    <GroupBox.Header>
                        <Label Content="Serial Controls"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           FontWeight="Bold"
                            />
                    </GroupBox.Header>
                    <Grid>


                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <Grid.RowDefinitions>
                            <RowDefinition  Height="Auto"/>
                            <RowDefinition  Height="Auto"/>
                        </Grid.RowDefinitions>

                        <Label Grid.Row="0" Grid.Column="0" Name="comPortLabel" Content="Com Port: " Margin="10" MinHeight="20" MinWidth="20" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        <ComboBox Grid.Row="0" Grid.Column="1" Name="comPortBox" Height="20" Width="100" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="10" DropDownOpened="ComPortComboBoxOpen"/>
                        <Button Grid.Row="1" Grid.Column="0" Name="connectButton" Height="30" Width="100" Margin="10" Content="Connect" Click="ConnectButtonClicked" HorizontalAlignment="Left"/>

                    </Grid>
                </GroupBox>
            </TabItem>

            <!--FLUIDICS CONTROL-->
            <TabItem Name="fluidicsControls" Header="Controls" FontWeight="Bold">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <Grid.RowDefinitions>
                        <RowDefinition  Height="Auto"/>
                        <RowDefinition  Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!--VALVE CONTROLS-->
                    <GroupBox Grid.Row ="0" Grid.Column="0" Margin="10" VerticalAlignment="Top" HorizontalAlignment="Left">
                        <GroupBox.Header>
                            <Label Content="Rocker Valve Controls"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           FontWeight="Bold"
                            />
                        </GroupBox.Header>
                        <Grid>

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <Grid.RowDefinitions>
                                <RowDefinition  Height="Auto"/>
                                <RowDefinition  Height="Auto"/>
                                <RowDefinition  Height="Auto"/>
                                <RowDefinition  Height="Auto"/>
                                <RowDefinition  Height="Auto"/>
                                <RowDefinition  Height="Auto"/>
                            </Grid.RowDefinitions>

                            <CheckBox Grid.Row="0" Grid.Column="0" Content = "Enable Valve Controls" FontWeight="Medium" Margin="13,5,107,5" Grid.ColumnSpan="2" Click="EnableValveChanges"/>

                            <Button Grid.Row="1" Grid.Column="0" Name="valveOneButton" Height="30" Width="100" IsEnabled="False" Tag="1" Background="Red" Margin="10" Content="Enable Valve 1" Click="ToggleValve"/>
                            <Button Grid.Row="2" Grid.Column="0" Name="valveTwoButton" Height="30" Width="100" IsEnabled="False" Tag="2" Background="Red" Margin="10" Content="Enable Valve 2" Click="ToggleValve"/>
                            <Button Grid.Row="3" Grid.Column="0" Name="valveThreeButton" Height="30" Width="100" IsEnabled="False" Tag="3" Background="Red" Margin="10" Content="Enable Valve 3" Click="ToggleValve"/>
                            <Button Grid.Row="4" Grid.Column="0" Name="valveFourButton" Height="30" Width="100" IsEnabled="False" Tag="4" Background="Red" Margin="10" Content="Enable Valve 4" Click="ToggleValve"/>
                            <Button Grid.Row="5" Grid.Column="0" Name="valveFiveButton" Height="30" Width="100" IsEnabled="False" Tag="5" Background="Red" Margin="10" Content="Enable Valve 5" Click="ToggleValve"/>

                            <Button Grid.Row="1" Grid.Column="1" Name="valveSixButton" Height="30" Width="100" IsEnabled="False" Tag="6" Background="Red" Margin="10" Content="Enable Valve 6" Click="ToggleValve"/>
                            <Button Grid.Row="2" Grid.Column="1" Name="valveSevenButton" Height="30" Width="100" IsEnabled="False" Tag="7" Background="Red" Margin="10" Content="Enable Valve 7" Click="ToggleValve"/>
                            <Button Grid.Row="3" Grid.Column="1" Name="valveEightButton" Height="30" Width="100" IsEnabled="False" Tag="8" Background="Red" Margin="10" Content="Enable Valve 8" Click="ToggleValve"/>
                            <Button Grid.Row="4" Grid.Column="1" Name="valveNineButton" Height="30" Width="100" IsEnabled="False" Tag="9" Background="Red" Margin="10" Content="Enable Valve 9" Click="ToggleValve"/>
                            <Button Grid.Row="5" Grid.Column="1" Name="valveTenButton" Height="30" Width="100" IsEnabled="False" Tag="10" Background="Red" Margin="10" Content="Enable Valve 10" Click="ToggleValve"/>
                        </Grid>
                    </GroupBox>

                    <!--PINCH VALVE CONTROLS-->
                    <StackPanel Orientation="Vertical" Grid.Row="0" Grid.Column="1">
                        <GroupBox Margin="10" VerticalAlignment="Top" HorizontalAlignment="Left">
                            <GroupBox.Header>
                                <Label Content="Proportional Pinch Valve Controls"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           FontWeight="Bold"
                            />
                            </GroupBox.Header>
                            <Grid>

                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <Grid.RowDefinitions>
                                    <RowDefinition  Height="Auto"/>
                                    <RowDefinition  Height="Auto"/>
                                    <RowDefinition  Height="Auto"/>
                                    <RowDefinition  Height="Auto"/>
                                </Grid.RowDefinitions>

                                <Button Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Name="homePinchValveButton"  Height="30" Width="130" IsEnabled="False" Margin="13, 10,0,10" Content="Home Pinch Valve" HorizontalAlignment="Left" Click="HomeValve"/>
                                <TextBox Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Name="pinchValveStepCountBox" Width="130" HorizontalAlignment="Left" Margin="13,0,0,0"/>
                                <Button Grid.Row="1" Grid.Column="2" Name="pinchValveTakeStepsButton" Width="80" Content="Take Steps" IsEnabled="False" Margin="10,0,0,0" HorizontalAlignment="Left" Click="SendValveSteps"/>
                                <Button Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" Name="disablePinchValveButton"  Height="30" Width="130" IsEnabled="False" Margin="13, 10,0,10" Content="Disable Pinch Valve" HorizontalAlignment="Left" Click="DisableValve"/>
                                <Label Grid.Row="3" Grid.Column="0" Name="pinchValveStepLabel" Content="Current Step: " Margin="13,0,0,0"/>
                                <Label Grid.Row="3" Grid.Column="1" Name="pinchValveStepCount" Content="0" Margin="0,0,0,0"/>
                            </Grid>
                        </GroupBox>

                        <!--PROP VALVE CONTROLS-->
                        <GroupBox Margin="10" VerticalAlignment="Top" HorizontalAlignment="Left">
                            <GroupBox.Header>
                                <Label Content="Proportional Valve Controls"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           FontWeight="Bold"
                            />
                            </GroupBox.Header>
                            <Grid>

                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <Grid.RowDefinitions>
                                    <RowDefinition  Height="Auto"/>
                                    <RowDefinition  Height="Auto"/>
                                    <RowDefinition  Height="Auto"/>
                                    <RowDefinition  Height="Auto"/>
                                </Grid.RowDefinitions>

                                <Button Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Name="homePropValveButton"  Height="30" Width="130" IsEnabled="False" Margin="13, 10,0,10" Content="Home Prop Valve" HorizontalAlignment="Left" Click="HomeValve"/>
                                <TextBox Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Name="propValveStepCountBox" Width="130" HorizontalAlignment="Left" Margin="13,0,0,0"/>
                                <Button Grid.Row="1" Grid.Column="2" Name="propValveTakeStepsButton" Width="80" Content="Take Steps" IsEnabled="False" Margin="10,0,0,0" HorizontalAlignment="Left" Click="SendValveSteps"/>
                                <Button Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" Name="disablePropValveButton"  Height="30" Width="130" IsEnabled="False" Margin="13, 10,0,10" Content="Disable Prop Valve" HorizontalAlignment="Left" Click="DisableValve"/>
                                <Label Grid.Row="3" Grid.Column="0" Name="propValveStepLabel" Content="Current Step: " Margin="13,0,0,0"/>
                                <Label Grid.Row="3" Grid.Column="1" Name="propValveStepCount" Content="0" Margin="0,0,0,0"/>
                            </Grid>
                        </GroupBox>
                    </StackPanel>

                    <!--SHEATH PUMP-->
                    <StackPanel Orientation="Vertical" Grid.Row="0" Grid.Column="2" >
                        <GroupBox Margin="10" VerticalAlignment="Top" HorizontalAlignment="Left" FontWeight="Medium" >
                            <GroupBox.Header>
                                <Label Content="Sheath Pump Controls"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           FontWeight="Bold"
                            />
                            </GroupBox.Header>

                            <StackPanel Orientation="Vertical">
                                <CheckBox Name="enableSheathPumpChangesButton" Content="Enable Sheath Pump Controls" Margin="13, 5, 0, 0" Click="EnableSheathPumpChanges"/>
                                <StackPanel Orientation="Horizontal">
                                    <Button Height="14" Width="14" Name="sheathPumpOnButton" Margin="13, 2, 0, 0" HorizontalAlignment="Center" VerticalAlignment="Center" Background="Red" IsEnabled="False" Tag="sheath" Click="HandlePump"/>
                                    <Label Name="sheatPumpOnLabel" Content="Sheath Pump On " Margin="4, 2, 0, 0" HorizontalAlignment="Center" VerticalAlignment="Center" Tag="sheath"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <Button Height="14" Width="14" Name="sheathPumpOffButton" Margin="13, 2, 0, 0" HorizontalAlignment="Center" VerticalAlignment="Center" Background="Red" IsEnabled="False" Tag="sheath" Click="HandlePump"/>
                                    <Label Name="sheathPumpOffLabel" Content="Sheath Pump Off " Margin="4, 2, 0, 0" HorizontalAlignment="Center" VerticalAlignment="Center" Tag="sheath"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <Button Height="14" Width="14" Name="sheathPumpAutoButton" Margin="13, 2, 0, 0" HorizontalAlignment="Center" VerticalAlignment="Center" Background="Red" IsEnabled="False" Tag="sheath" Click="HandlePump"/>
                                    <Label Name="sheathPumpAutoLabel" Content="Sheath Pump Auto " Margin="4, 2, 0, 0" HorizontalAlignment="Center" VerticalAlignment="Center" Tag="sheath"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <Button Height="14" Width="14" Name="sheathPumpSpeedButton" Margin="13, 2, 0, 0" HorizontalAlignment="Center" VerticalAlignment="Center" Background="Red" IsEnabled="False" Tag="sheath" Click="HandlePump"/>
                                    <Label Name="sheathPumpSpeedControlLabel" Content="Sheath Pump Speed Controlled" Margin="4, 2, 0, 0" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <Label Name="qfSheathPumpSpeedLabel" Content="Sheath Speed: " Margin="13, 2, 0, 0"/>
                                    <Label Name="sheathSpeedValue" Content="0" Margin="13, 2, 0, 0"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <Label Name="sheathPumpSpeedSliderLabel" Content="Slider Value: " Margin="13, 2, 0, 0"/>
                                    <Label Name="sheathSpeedSliderValue" Content="0" Margin="13, 2, 0, 0"/>
                                </StackPanel>
                                <Slider Name="sheathSpeedSlider" Minimum="0" Maximum="100" Margin="13, 2, 0, 0" IsEnabled="False" Value="0" ValueChanged="PumpSliderChanged" Tag="sheathSlider" TickFrequency="1" IsSnapToTickEnabled="True" SmallChange="1" LargeChange="1"/>
                                <StackPanel Orientation="Horizontal">
                                    <Button Width="130" Height="20"  Name="sendSheathSpeedButton" Content="Send Speed" HorizontalAlignment="Left" Margin="13, 5, 10, 0" IsEnabled="False" Tag="sheath" Click="HandlePump"/>
                                    <Ellipse Height="50" Width="50" Name="sheathSpeedIndicator" Fill="Red" HorizontalAlignment="Left" VerticalAlignment="Top"/>
                                </StackPanel>

                            </StackPanel>
                        </GroupBox>

                        <!--WASTE PUMP-->
                        <GroupBox Margin="10" VerticalAlignment="Top" HorizontalAlignment="Left" FontWeight="Medium" >
                            <GroupBox.Header>
                                <Label Content="Waste Pump Controls"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           FontWeight="Bold"
                            />
                            </GroupBox.Header>
                            <StackPanel Orientation="Vertical">
                                <CheckBox Name="enableWastePumpChangesButton" Content="Enable Waste Pump Controls" Margin="13, 5, 0, 0" Click="EnableWastePumpChanges"/>
                                <StackPanel Orientation="Horizontal">
                                    <Button Height="14" Width="14" Name="wastePumpOnButton" Margin="13, 2, 0, 0" HorizontalAlignment="Center" VerticalAlignment="Center" Background="Red" IsEnabled="False" Tag="waste" Click="HandlePump"/>
                                    <Label Name="wastePumpOnLabel" Content="Waste Pump On " Margin="4, 2, 0, 0" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <Button Height="14" Width="14" Name="wastePumpOffButton" Margin="13, 2, 0, 0" HorizontalAlignment="Center" VerticalAlignment="Center" Background="Red" IsEnabled="False" Tag="waste" Click="HandlePump"/>
                                    <Label Name="wastePumpOffLabel" Content="Waste Pump Off " Margin="4, 2, 0, 0" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <Button Height="14" Width="14" Name="wastePumpAutoButton" Margin="13, 2, 0, 0" HorizontalAlignment="Center" VerticalAlignment="Center" Background="Red" IsEnabled="False" Tag="waste" Click="HandlePump"/>
                                    <Label Name="wastePumpAutoLabel" Content="Waste Pump Auto " Margin="4, 2, 0, 0" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <Button Height="14" Width="14" Name="wastePumpSpeedButton" Margin="13, 2, 0, 0" HorizontalAlignment="Center" VerticalAlignment="Center" Background="Red" IsEnabled="False" Tag="waste" Click="HandlePump"/>
                                    <Label Name="wastePumpSpeedControlLabel" Content="Waste Pump Speed Controlled " Margin="4, 2, 0, 0" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <Label Name="qfWastePumpSpeedLabel" Content="Waste Speed: " Margin="13, 2, 0, 0"/>
                                    <Label Name="wasteSpeedValue" Content="0" Margin="13, 2, 0, 0"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <Label Name="wastePumpSpeedSliderLabel" Content="Slider Value: " Margin="13, 2, 0, 0"/>
                                    <Label Name="wasteSpeedSliderValue" Content="0" Margin="13, 2, 0, 0"/>
                                </StackPanel>
                                <Slider Name="wasteSpeedSlider" Minimum="0" Maximum="100" Margin="13, 2, 0, 0" IsEnabled="False" Value="0" ValueChanged="PumpSliderChanged" Tag="wasteSlider" TickFrequency="1" IsSnapToTickEnabled="True" SmallChange="1" LargeChange="1"/>
                                <StackPanel Orientation="Horizontal">
                                    <Button Width="130" Height="20"  Name="sendWasteSpeedButton" Content="Send Speed" HorizontalAlignment="Left" Margin="13, 5, 10, 0" IsEnabled="False" Tag="waste" Click="HandlePump"/>
                                    <Ellipse Height="50" Width="50" Name="wasteSpeedIndicator" Fill="Red" HorizontalAlignment="Left" VerticalAlignment="Top"/>
                                </StackPanel>

                            </StackPanel>
                        </GroupBox>
                    </StackPanel>

                    <!--Z-AXIS CONTROLS-->
                    <GroupBox Grid.Row ="0" Grid.Column="3" Margin="10" VerticalAlignment="Top" HorizontalAlignment="Left">
                        <GroupBox.Header>
                            <Label Content="Z-Axis Controls"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           FontWeight="Bold"
                            />
                        </GroupBox.Header>

                        <StackPanel Orientation="Horizontal">
                            <Slider Name="zaxisSlider" Orientation="Vertical" Margin="10" Minimum="0" Maximum="10000" TickFrequency="1" IsSnapToTickEnabled="True" SmallChange="10" LargeChange="10" ValueChanged="ZAxisSliderChanged" IsDirectionReversed="True"/>
                            <StackPanel Orientation="Vertical">
                                <StackPanel Orientation="Horizontal">
                                    <Label Content="Probe Depth, steps: "/>
                                    <TextBox Width="100" Height="20" TextChanged="ZAxisTextBoxChanged" VerticalAlignment="Bottom" HorizontalAlignment="Left"></TextBox>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <Label Content="Slider Depth: "/>
                                    <Label Name="sliderDepthValue"  Content="0.00 mm: "/>
                                </StackPanel>
                                <Button Name="zaxisHomeButton"  Content="Home Z-Axis" Margin="5" Click="HomeZAxis"></Button>
                                <Button Name="zaxisMoveButton" Content="Move" Margin="5" Click="MoveZAxis"></Button>

                                <Button Name="zaxisSetHeightButton" Content="Set Height" Margin="5" Click="zAxisContectMenuButtonClicked">
                                    <Button.ContextMenu>
                                        <ContextMenu>
                                            <MenuItem Name="setTubeTop" Header="Tube Top" Click="SetHeight"/>
                                            <MenuItem Name="setTubeBottom" Header="Tube Bottom" Click="SetHeight"/>
                                            <MenuItem Name="setPlateTop" Header="Plate Top" Click="SetHeight"/>
                                            <MenuItem Name="setPlateBottom" Header="Plate Bottom" Click="SetHeight"/>
                                        </ContextMenu>
                                    </Button.ContextMenu>
                                </Button>
                                <Button Name="zaxisMoveToSetHeightButton" Content="Move to set height" Margin="5" Click="zAxisContectMenuButtonClicked">
                                    <Button.ContextMenu>
                                        <ContextMenu>
                                            <MenuItem Name="moveTubeTop" Header="Tube Top" Click="MoveToSetHeight"/>
                                            <MenuItem Name="moveTubeBottom" Header="Tube Bottom" Click="MoveToSetHeight"/>
                                            <MenuItem Name="movePlateTop" Header="Plate Top" Click="MoveToSetHeight"/>
                                            <MenuItem Name="movePlateBottom" Header="Plate Bottom" Click="MoveToSetHeight"/>
                                        </ContextMenu>
                                    </Button.ContextMenu>
                                </Button>
                                <Button Name="zaxisEStop" Content="EStop Z-Axis" Margin="5" Click="EStopZAxis"></Button>
                            </StackPanel>
                        </StackPanel>
                    </GroupBox>

                </Grid>
            </TabItem>
            <!--FLUIDICS INFO-->
            <TabItem Name="fluidicsRuntimeInfo" Header="Info" FontWeight="Bold">

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <Grid.RowDefinitions>
                        <RowDefinition  Height="Auto"/>
                        <RowDefinition  Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!--FLOW RATES-->
                    <GroupBox Grid.Row ="0" Grid.Column="0" Margin="10" VerticalAlignment="Top" HorizontalAlignment="Left">
                        <GroupBox.Header>
                            <Label Content="Flow Rates"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           FontWeight="Bold"
                            />
                        </GroupBox.Header>

                        <Grid>

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <Grid.RowDefinitions>
                                <RowDefinition  Height="Auto"/>
                                <RowDefinition  Height="Auto"/>
                                <RowDefinition  Height="Auto"/>
                                <RowDefinition  Height="Auto"/>
                                <RowDefinition  Height="Auto"/>
                                <RowDefinition  Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!--SHEATH RATE-->
                            <Label Grid.Row="0" Grid.Column="0" Name="sheathRateLabel" Content="Sheath Rate: " Margin="13, 2, 0, 0"/>
                            <Label Grid.Row="0" Grid.Column="1" Name="sheathRate" Content="0.00 mL/min" Margin="13, 2, 0, 0"/>
                            <!--SHEATH SPEED-->
                            <Label Grid.Row="1" Grid.Column="0" Name="sampleVelocityLabel" Content="Sample Velocity: " Margin="13, 2, 0, 0"/>
                            <Label Grid.Row="1" Grid.Column="1" Name="sampleVelocity" Content="0.00 mm/s" Margin="13, 2, 0, 0"/>
                            <!--SAMPLE RATE-->
                            <Label Grid.Row="2" Grid.Column="0" Name="sampleRateLabel" Content="Sample Rate: " Margin="13, 2, 0, 0"/>
                            <Label Grid.Row="2" Grid.Column="1" Name="sampleRate" Content="0.00 uL/min" Margin="13, 2, 0, 0"/>
                            <!--TARGET SAMPLE RATE-->
                            <Label Grid.Row="3" Grid.Column="0" Name="targetSampleRateLabel" Content="Target Sample Rate: " Margin="13, 2, 0, 0"/>
                            <Label Grid.Row="3" Grid.Column="1" Name="targetSampleRate" Content="0.00 uL/min" Margin="13, 2, 0, 0"/>
                            <!--SHEATH RATE STABLE-->
                            <Label Grid.Row="4" Grid.Column="0" Name="sheathRateStableLabel" Content="Sheath Rate Stable: " Margin="13, 2, 0, 0"/>
                            <Ellipse Grid.Row="4" Grid.Column="1"  Height="20" Width="20" Name="sheathRateStableIndicator" Fill="Red" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="13, 2, 0, 0"/>
                            <!--SAMPLE RATE STABLE-->
                            <Label Grid.Row="5" Grid.Column="0" Name="sampleRateStableLabel" Content="Sample Rate Stable: " Margin="13, 2, 0, 0"/>
                            <Ellipse Grid.Row="5" Grid.Column="1"  Height="20" Width="20" Name="sampleRateStableIndicator" Fill="Red" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="13, 2, 0, 0"/>
                        </Grid>

                    </GroupBox>

                    <!--VACUUM & TUBE DETECTION-->
                    <StackPanel Grid.Row ="0" Grid.Column="1" Orientation="Vertical">
                        <!--VACUUM-->
                        <GroupBox Grid.Row ="0" Grid.Column="1" Margin="10" VerticalAlignment="Top" HorizontalAlignment="Left">
                            <GroupBox.Header>
                                <Label Content="Vacuum Level"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           FontWeight="Bold"
                            />
                            </GroupBox.Header>

                            <Grid>

                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <Grid.RowDefinitions>
                                    <RowDefinition  Height="Auto"/>
                                </Grid.RowDefinitions>

                                <!--WASTE VACUUM-->
                                <Label Grid.Row="0" Grid.Column="0" Name="wasteVacuumLevelLabel" Content="Waste Level: " Margin="13, 2, 0, 0"/>
                                <Label Grid.Row="0" Grid.Column="1" Name="wasteVacuumLevel" Content="0.00 PSI" Margin="13, 2, 0, 0"/>

                            </Grid>
                        </GroupBox>

                        <!--TUBE DETECTION-->
                        <GroupBox Margin="10" VerticalAlignment="Top" HorizontalAlignment="Left">
                            <GroupBox.Header>
                                <Label Content="Tube Detection"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           FontWeight="Bold"
                            />
                            </GroupBox.Header>

                            <Grid>

                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <Grid.RowDefinitions>
                                    <RowDefinition  Height="Auto"/>
                                </Grid.RowDefinitions>

                                <!--TUBE DETECTION-->
                                <Label Grid.Row="0" Grid.Column="0" Name="tubeDetectionLabel" Content="Tube Detection: " Margin="13, 2, 0, 0"/>
                                <Ellipse Grid.Row="0" Grid.Column="1"  Height="20" Width="20" Name="tubeDetectionIndicator" Fill="Red" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="13, 2, 0, 0"/>


                            </Grid>
                        </GroupBox>
                    </StackPanel>

                    <!--LEVEL SENSORS-->
                    <GroupBox Grid.Row ="0" Grid.Column="2" Margin="10" VerticalAlignment="Top" HorizontalAlignment="Left">
                        <GroupBox.Header>
                            <Label Content="Level Sensors"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           FontWeight="Bold"
                            />
                        </GroupBox.Header>

                        <Grid>

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <Grid.RowDefinitions>
                                <RowDefinition  Height="Auto"/>
                                <RowDefinition  Height="Auto"/>
                                <RowDefinition  Height="Auto"/>
                                <RowDefinition  Height="Auto"/>
                                <RowDefinition  Height="Auto"/>
                                <RowDefinition  Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!--INTERNAL SHEATH LOW-->
                            <Label Grid.Row="0" Grid.Column="0" Name="internalSheathLowLabel" Content="Internal Sheath Low: " Margin="13, 2, 0, 0"/>
                            <Ellipse Grid.Row="0" Grid.Column="1" Height="20" Width="20" Name="internalSheathLowIndicator" Fill="Red" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="13, 2, 0, 0"/>
                            <!--INTERNAL WASTE HIGH-->
                            <Label Grid.Row="1" Grid.Column="0" Name="internalWasteHighLabel" Content="Internal Waste High: " Margin="13, 2, 0, 0"/>
                            <Ellipse Grid.Row= "1" Grid.Column="1" Height="20" Width="20" Name="internalWasteHighIndicator" Fill="Red" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="13, 2, 0, 0"/>
                            <!--EXTERNAL SHEATH LOW-->
